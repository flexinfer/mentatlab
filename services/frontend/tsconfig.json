{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
 
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
 
    /* Interop for CommonJS-style typings (allow default import of React types) */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
 
    /* Linting - relaxed temporarily to allow incremental fixes */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
 
    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
 
    /* Vitest and Vite types */
    "types": ["vitest/globals", "vite/client", "react", "react-dom", "jest", "@testing-library/jest-dom", "testing-library__user-event"]
  },
  "include": ["src", "vitest.config.ts", "vite-env.d.ts"],
  "exclude": [
    "**/*.spec.*",
    "**/*.test.*",
    "**/__tests__/**",
    "src/**/*.spec.*",
    "src/**/*.test.*"
  ]
}