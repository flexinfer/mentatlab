    "@vitest/ui": "^3.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.2.6",
    "immer": "^10.1.1",
    "jsdom": "^26.1.0",
    "lucide-react": "^0.525.0",
    "pixi.js": "^8.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-resizable-panels": "^3.0.3",
