{
  "name": "mentatlab-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "start": "vite preview",
    "dev": "vite",
    "e2e": "playwright test",
