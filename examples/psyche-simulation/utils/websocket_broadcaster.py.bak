def get_broadcaster() -> WebSocketEventBroadcaster:
    """Get or create the global broadcaster instance.
    
    Returns:
        The global WebSocketEventBroadcaster instance
    """
    global _broadcaster
    
    if _broadcaster is None:
        _broadcaster = WebSocketEventBroadcaster()
    
    return _broadcaster